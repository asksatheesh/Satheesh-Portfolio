/* GLOBAL STYLES */
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #fafafa;
}

/* NAVBAR */
#main-nav {
  position: fixed;
  top: 0;
  width: 100%;
  background: linear-gradient(to right, #EFE1DC, #F3EBE2);
  z-index: 1000;
}

#main-nav .nav-link {
  color: #333;
  font-weight: 500;
}

#main-nav .nav-link.active {
  color: #000;
  border-bottom: 2px solid #333;
}

/* PROFILE IMAGE */
.profile-photo {
  width: 120px;
  height: 120px;
}

/* BADGES */
.tech-badge {
  padding: 0.5rem 1rem;
  font-weight: 500;
  border-radius: 12px;
  margin: 0.2rem;
}

.bg-blue { background-color: #dbeafe; color: #1e40af; }
.bg-purple { background-color: #e9d5ff; color: #7c3aed; }
.bg-green { background-color: #dcfce7; color: #16a34a; }
.bg-orange { background-color: #FFE5B4; color: #FF6600; }

/* SECTION HEADINGS */
h3 {
  font-weight: bold;
  margin-bottom: 1rem;
}

/* PROJECT CARDS */
.project-card {
  border: none;
  border-radius: 12px;
  padding: 1rem;
}

.project-card.provisioning {
  background-color: #f1f5ff;
}

.project-card.reconciliation {
  background-color: #fdf6e4;
}

/* SKILL CARDS */
.skill-card {
  border: none;
  text-align: center;
  background-color: #fff;
}

.skill-icon {
  font-size: 2rem;
  color: #2563eb;
}

/* CONTACT SECTION */
.heading-blue {
  color: #1e40af;
}

.contact-description {
  max-width: 600px;
  margin: 0 auto;
}

.contact-button {
  background: linear-gradient(90deg, #2563eb 0%, #7c3aed 100%);
  border: none;
}

/* SOCIAL LINKS */
.social-link {
  color: #333;
  text-decoration: none;
}

.social-link:hover {
  color: #2563eb;
}

/* FOOTER */
footer {
  background-color: #f8f9fa;
}

/* TYPED TEXT */
.typed-text {
  color: #708dc6;
}
